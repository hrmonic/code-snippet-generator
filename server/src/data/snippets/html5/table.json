{
  "id": "html5-table",
  "name": "Table HTML5 Responsive",
  "description": "Tableau HTML5 avec tri et style responsive",
  "language": "html5",
  "feature": "table",
  "code": "<!DOCTYPE html>\n<html lang=\"fr\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>{{tableTitle}}</title>\n    <style>\n        table {\n            width: 100%;\n            border-collapse: collapse;\n            margin: 1rem 0;\n        }\n        th, td {\n            padding: 12px;\n            text-align: left;\n            border-bottom: 1px solid #ddd;\n        }\n        th {\n            background-color: #f8f9fa;\n            font-weight: bold;\n            cursor: pointer;\n        }\n        th:hover {\n            background-color: #e9ecef;\n        }\n        tr:hover {\n            background-color: #f5f5f5;\n        }\n        @media (max-width: 768px) {\n            table, thead, tbody, th, td, tr {\n                display: block;\n            }\n            thead tr {\n                position: absolute;\n                top: -9999px;\n                left: -9999px;\n            }\n            tr {\n                border: 1px solid #ccc;\n                margin-bottom: 10px;\n            }\n            td {\n                border: none;\n                position: relative;\n                padding-left: 50%;\n            }\n            td:before {\n                content: attr(data-label);\n                position: absolute;\n                left: 6px;\n                font-weight: bold;\n            }\n        }\n    </style>\n</head>\n<body>\n    <h2>{{tableTitle}}</h2>\n    <table>\n        <thead>\n            <tr>\n                <th onclick=\"sortTable(0)\">{{column1}} ↕</th>\n                <th onclick=\"sortTable(1)\">{{column2}} ↕</th>\n                <th onclick=\"sortTable(2)\">{{column3}} ↕</th>\n            </tr>\n        </thead>\n        <tbody>\n            <tr>\n                <td data-label=\"{{column1}}\">Donnée 1</td>\n                <td data-label=\"{{column2}}\">Donnée 2</td>\n                <td data-label=\"{{column3}}\">Donnée 3</td>\n            </tr>\n        </tbody>\n    </table>\n    <script>\n        function sortTable(n) {\n            const table = document.querySelector('table');\n            let switching = true;\n            let shouldSwitch;\n            while (switching) {\n                switching = false;\n                const rows = table.rows;\n                for (let i = 1; i < rows.length - 1; i++) {\n                    shouldSwitch = false;\n                    const x = rows[i].getElementsByTagName('TD')[n];\n                    const y = rows[i + 1].getElementsByTagName('TD')[n];\n                    if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {\n                        shouldSwitch = true;\n                        break;\n                    }\n                }\n                if (shouldSwitch) {\n                    rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);\n                    switching = true;\n                }\n            }\n        }\n    </script>\n</body>\n</html>",
  "variables": [
    {
      "name": "tableTitle",
      "type": "string",
      "required": true,
      "description": "Titre du tableau"
    },
    {
      "name": "column1",
      "type": "string",
      "required": true,
      "description": "Nom de la première colonne"
    },
    {
      "name": "column2",
      "type": "string",
      "required": true,
      "description": "Nom de la deuxième colonne"
    },
    {
      "name": "column3",
      "type": "string",
      "required": true,
      "description": "Nom de la troisième colonne"
    }
  ],
  "security": {
    "sqlInjection": false,
    "xss": true
  }
}

