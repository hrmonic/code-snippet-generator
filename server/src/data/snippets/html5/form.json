{
  "id": "html5-form",
  "name": "Formulaire HTML5",
  "description": "Formulaire HTML5 avec validation native et champs sécurisés",
  "language": "html5",
  "feature": "form",
  "code": "<!DOCTYPE html>\n<html lang=\"fr\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>{{formName}}</title>\n    <style>\n        body {\n            font-family: Arial, sans-serif;\n            max-width: 600px;\n            margin: 50px auto;\n            padding: 20px;\n        }\n        .form-group {\n            margin-bottom: 1.5rem;\n        }\n        label {\n            display: block;\n            margin-bottom: 0.5rem;\n            font-weight: bold;\n        }\n        input, textarea, select {\n            width: 100%;\n            padding: 0.75rem;\n            border: 1px solid #ddd;\n            border-radius: 4px;\n            font-size: 1rem;\n        }\n        button {\n            background: #667eea;\n            color: white;\n            padding: 0.75rem 2rem;\n            border: none;\n            border-radius: 4px;\n            cursor: pointer;\n            font-size: 1rem;\n        }\n        button:hover {\n            background: #5568d3;\n        }\n    </style>\n</head>\n<body>\n    <h2>{{formName}}</h2>\n    <form action=\"{{action}}\" method=\"{{method}}\" novalidate>\n        {{#if includeName}}\n        <div class=\"form-group\">\n            <label for=\"name\">Nom</label>\n            <input type=\"text\" id=\"name\" name=\"name\" required minlength=\"2\" maxlength=\"50\">\n        </div>\n        {{/if}}\n        \n        {{#if includeEmail}}\n        <div class=\"form-group\">\n            <label for=\"email\">Email</label>\n            <input type=\"email\" id=\"email\" name=\"email\" required>\n        </div>\n        {{/if}}\n        \n        {{#if includePhone}}\n        <div class=\"form-group\">\n            <label for=\"phone\">Téléphone</label>\n            <input type=\"tel\" id=\"phone\" name=\"phone\" pattern=\"[0-9]{10}\">\n        </div>\n        {{/if}}\n        \n        {{#if includeSubject}}\n        <div class=\"form-group\">\n            <label for=\"subject\">Sujet</label>\n            <input type=\"text\" id=\"subject\" name=\"subject\" required>\n        </div>\n        {{/if}}\n        \n        {{#if includeMessage}}\n        <div class=\"form-group\">\n            <label for=\"message\">Message</label>\n            <textarea id=\"message\" name=\"message\" rows=\"5\" required></textarea>\n        </div>\n        {{/if}}\n        \n        <button type=\"submit\">{{buttonText}}</button>\n    </form>\n</body>\n</html>",
  "variables": [
    {
      "name": "formName",
      "type": "string",
      "required": true,
      "description": "Nom du formulaire"
    },
    {
      "name": "action",
      "type": "string",
      "required": false,
      "description": "URL de soumission",
      "defaultValue": "/submit"
    },
    {
      "name": "method",
      "type": "string",
      "required": false,
      "description": "Méthode HTTP",
      "defaultValue": "POST"
    },
    {
      "name": "includeName",
      "type": "checkbox",
      "required": false,
      "description": "Inclure un champ nom",
      "defaultValue": true
    },
    {
      "name": "includeEmail",
      "type": "checkbox",
      "required": false,
      "description": "Inclure un champ email",
      "defaultValue": true
    },
    {
      "name": "includePhone",
      "type": "checkbox",
      "required": false,
      "description": "Inclure un champ téléphone",
      "defaultValue": false
    },
    {
      "name": "includeMessage",
      "type": "checkbox",
      "required": false,
      "description": "Inclure un champ message",
      "defaultValue": true
    },
    {
      "name": "includeSubject",
      "type": "checkbox",
      "required": false,
      "description": "Inclure un champ sujet",
      "defaultValue": false
    },
    {
      "name": "buttonText",
      "type": "string",
      "required": false,
      "description": "Texte du bouton",
      "defaultValue": "Envoyer"
    }
  ],
  "security": {
    "sqlInjection": false,
    "xss": true,
    "csrf": true
  }
}
