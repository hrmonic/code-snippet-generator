{
  "id": "html5-accordion",
  "name": "Accordion HTML5",
  "description": "Composant accordion avec animation et état",
  "language": "html5",
  "feature": "accordion",
  "code": "<!DOCTYPE html>\n<html lang=\"fr\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>{{accordionTitle}}</title>\n    <style>\n        .accordion {\n            max-width: 600px;\n            margin: 0 auto;\n        }\n        .accordion-item {\n            border: 1px solid #ddd;\n            margin-bottom: 10px;\n            border-radius: 8px;\n            overflow: hidden;\n        }\n        .accordion-header {\n            background: #f8f9fa;\n            padding: 15px 20px;\n            cursor: pointer;\n            display: flex;\n            justify-content: space-between;\n            align-items: center;\n            transition: background 0.3s;\n        }\n        .accordion-header:hover {\n            background: #e9ecef;\n        }\n        .accordion-header.active {\n            background: #667eea;\n            color: white;\n        }\n        .accordion-content {\n            max-height: 0;\n            overflow: hidden;\n            transition: max-height 0.3s ease-out;\n            padding: 0 20px;\n        }\n        .accordion-content.active {\n            max-height: 500px;\n            padding: 20px;\n        }\n        .accordion-icon {\n            transition: transform 0.3s;\n        }\n        .accordion-header.active .accordion-icon {\n            transform: rotate(180deg);\n        }\n    </style>\n</head>\n<body>\n    <h2>{{accordionTitle}}</h2>\n    <div class=\"accordion\">\n        <div class=\"accordion-item\">\n            <div class=\"accordion-header\" onclick=\"toggleAccordion(this)\">\n                <span>{{item1Title}}</span>\n                <span class=\"accordion-icon\">▼</span>\n            </div>\n            <div class=\"accordion-content\">\n                <p>{{item1Content}}</p>\n            </div>\n        </div>\n        <div class=\"accordion-item\">\n            <div class=\"accordion-header\" onclick=\"toggleAccordion(this)\">\n                <span>{{item2Title}}</span>\n                <span class=\"accordion-icon\">▼</span>\n            </div>\n            <div class=\"accordion-content\">\n                <p>{{item2Content}}</p>\n            </div>\n        </div>\n        <div class=\"accordion-item\">\n            <div class=\"accordion-header\" onclick=\"toggleAccordion(this)\">\n                <span>{{item3Title}}</span>\n                <span class=\"accordion-icon\">▼</span>\n            </div>\n            <div class=\"accordion-content\">\n                <p>{{item3Content}}</p>\n            </div>\n        </div>\n    </div>\n    <script>\n        function toggleAccordion(header) {\n            const item = header.parentElement;\n            const content = item.querySelector('.accordion-content');\n            const isActive = header.classList.contains('active');\n            \n            // Fermer tous les autres\n            document.querySelectorAll('.accordion-header').forEach(h => {\n                if (h !== header) {\n                    h.classList.remove('active');\n                    h.nextElementSibling.classList.remove('active');\n                }\n            });\n            \n            // Toggle l'élément actuel\n            header.classList.toggle('active');\n            content.classList.toggle('active');\n        }\n    </script>\n</body>\n</html>",
  "variables": [
    {
      "name": "accordionTitle",
      "type": "text",
      "label": "Titre de l'accordion",
      "required": true,
      "description": "Titre principal de l'accordion",
      "placeholder": "FAQ"
    },
    {
      "name": "numberOfItems",
      "type": "number",
      "label": "Nombre d'items",
      "required": true,
      "description": "Nombre d'éléments dans l'accordion",
      "defaultValue": 3,
      "min": 2,
      "max": 10
    },
    {
      "name": "itemTitles",
      "type": "text",
      "label": "Titres des items",
      "required": true,
      "description": "Titres séparés par des virgules",
      "placeholder": "Question 1,Question 2,Question 3"
    },
    {
      "name": "itemContents",
      "type": "textarea",
      "label": "Contenus des items",
      "required": true,
      "description": "Contenus séparés par des lignes",
      "placeholder": "Réponse 1\nRéponse 2\nRéponse 3"
    },
    {
      "name": "allowMultiple",
      "type": "checkbox",
      "label": "Plusieurs items ouverts",
      "required": false,
      "description": "Permettre d'avoir plusieurs items ouverts simultanément",
      "defaultValue": false
    },
    {
      "name": "headerColor",
      "type": "color",
      "label": "Couleur de l'en-tête",
      "required": false,
      "description": "Couleur de fond de l'en-tête",
      "defaultValue": "#f8f9fa"
    },
    {
      "name": "activeHeaderColor",
      "type": "color",
      "label": "Couleur de l'en-tête actif",
      "required": false,
      "description": "Couleur de fond de l'en-tête actif",
      "defaultValue": "#667eea"
    },
    {
      "name": "borderRadius",
      "type": "select",
      "label": "Rayon des bordures",
      "required": false,
      "description": "Border radius des items",
      "defaultValue": "8px",
      "options": [
        { "value": "0px", "label": "Carré" },
        { "value": "4px", "label": "Petit" },
        { "value": "8px", "label": "Moyen" },
        { "value": "12px", "label": "Grand" }
      ]
    },
    {
      "name": "animationDuration",
      "type": "select",
      "label": "Durée d'animation",
      "required": false,
      "description": "Durée de l'animation d'ouverture/fermeture",
      "defaultValue": "0.3s",
      "options": [
        { "value": "0.2s", "label": "Rapide" },
        { "value": "0.3s", "label": "Moyen" },
        { "value": "0.5s", "label": "Lent" }
      ]
    }
  ],
  "security": {
    "sqlInjection": false,
    "xss": true
  }
}

