{
  "id": "html5-card",
  "name": "Card Component HTML5",
  "description": "Composant card responsive avec ombre et hover",
  "language": "html5",
  "feature": "card",
  "code": "<!DOCTYPE html>\n<html lang=\"fr\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>{{cardTitle}}</title>\n    <style>\n        .card {\n            background: white;\n            border-radius: 8px;\n            box-shadow: 0 2px 8px rgba(0,0,0,0.1);\n            padding: 1.5rem;\n            max-width: 400px;\n            margin: 1rem;\n            transition: transform 0.3s, box-shadow 0.3s;\n        }\n        .card:hover {\n            transform: translateY(-5px);\n            box-shadow: 0 4px 16px rgba(0,0,0,0.2);\n        }\n        .card-header {\n            font-size: 1.5rem;\n            font-weight: bold;\n            margin-bottom: 1rem;\n        }\n        .card-body {\n            color: #666;\n            line-height: 1.6;\n        }\n        .card-footer {\n            margin-top: 1rem;\n            padding-top: 1rem;\n            border-top: 1px solid #eee;\n        }\n    </style>\n</head>\n<body>\n    <div class=\"card\">\n        <div class=\"card-header\">{{cardTitle}}</div>\n        <div class=\"card-body\">\n            {{cardContent}}\n        </div>\n        <div class=\"card-footer\">\n            <button>{{buttonText}}</button>\n        </div>\n    </div>\n</body>\n</html>",
  "variables": [
    {
      "name": "cardTitle",
      "type": "text",
      "label": "Titre de la card",
      "required": true,
      "description": "Titre principal de la card",
      "placeholder": "Mon titre"
    },
    {
      "name": "cardContent",
      "type": "textarea",
      "label": "Contenu de la card",
      "required": true,
      "description": "Contenu principal de la card",
      "placeholder": "Description du contenu..."
    },
    {
      "name": "backgroundColor",
      "type": "color",
      "label": "Couleur de fond",
      "required": false,
      "description": "Couleur de fond de la card",
      "defaultValue": "#ffffff"
    },
    {
      "name": "borderRadius",
      "type": "select",
      "label": "Rayon des bordures",
      "required": false,
      "description": "Border radius de la card",
      "defaultValue": "8px",
      "options": [
        { "value": "0px", "label": "Carré" },
        { "value": "4px", "label": "Petit" },
        { "value": "8px", "label": "Moyen" },
        { "value": "12px", "label": "Grand" },
        { "value": "20px", "label": "Très grand" }
      ]
    },
    {
      "name": "padding",
      "type": "select",
      "label": "Espacement interne",
      "required": false,
      "description": "Padding de la card",
      "defaultValue": "1.5rem",
      "options": [
        { "value": "1rem", "label": "Petit" },
        { "value": "1.5rem", "label": "Moyen" },
        { "value": "2rem", "label": "Grand" }
      ]
    },
    {
      "name": "maxWidth",
      "type": "select",
      "label": "Largeur maximale",
      "required": false,
      "description": "Largeur maximale de la card",
      "defaultValue": "400px",
      "options": [
        { "value": "300px", "label": "300px" },
        { "value": "400px", "label": "400px" },
        { "value": "500px", "label": "500px" },
        { "value": "100%", "label": "Pleine largeur" }
      ]
    },
    {
      "name": "hoverEffect",
      "type": "checkbox",
      "label": "Effet hover",
      "required": false,
      "description": "Ajouter un effet au survol",
      "defaultValue": true
    },
    {
      "name": "shadow",
      "type": "checkbox",
      "label": "Ombre",
      "required": false,
      "description": "Ajouter une ombre à la card",
      "defaultValue": true
    },
    {
      "name": "includeFooter",
      "type": "checkbox",
      "label": "Inclure un footer",
      "required": false,
      "description": "Ajouter une section footer avec bouton",
      "defaultValue": true
    },
    {
      "name": "buttonText",
      "type": "text",
      "label": "Texte du bouton",
      "required": false,
      "description": "Texte du bouton dans le footer",
      "defaultValue": "En savoir plus",
      "dependsOn": {
        "includeFooter": [true]
      }
    },
    {
      "name": "buttonColor",
      "type": "color",
      "label": "Couleur du bouton",
      "required": false,
      "description": "Couleur de fond du bouton",
      "defaultValue": "#667eea",
      "dependsOn": {
        "includeFooter": [true]
      }
    }
  ],
  "security": {
    "sqlInjection": false,
    "xss": true
  }
}

